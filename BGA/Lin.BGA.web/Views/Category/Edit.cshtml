@model Lin.BGA.Model.CategoryInfo

@{
    ViewBag.Title = "编辑";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section head{
    <script type="text/javascript">
        function OnSuccess(data) {
            alert(data.ErrorMsg);
            if (data.ErrorCode != 0) {
                return;
            }
            top.main.location.reload();

        }
        function OnBegin() {
            //do something before post data

        }
    </script>



}
<h2>@ViewBag.Title</h2>

@using (Ajax.BeginForm("Edit",new AjaxOptions{HttpMethod = "post",OnSuccess = "OnSuccess",OnBegin = "OnBegin",LoadingElementId = "loadingToast"}))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.ID)

    <table cellpadding="0" cellspacing="0" width="100%" border="0" class="table1">
        <tr>
            <td class="td1_2">
                名称
            </td>
            <td class="td1_3">
                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
            </td>
        </tr>
        <tr>
            <td class="td1_2">
                是否可用
            </td>
            <td class="td1_3">
                @Html.EditorFor(model => model.Enable) 正常
            </td>
        </tr>
       <tr>
            <td class="td1_2" colspan="2">
                <input type="submit" value="提交" class="btn btn-default" />
            </td>
        </tr>
    </table>

}


